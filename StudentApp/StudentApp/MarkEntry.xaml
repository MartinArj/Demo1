<Page x:Class="StudentApp.MarkEntry"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Background="White"
	Title="MarkEntry">

    <Grid>
        

            <Border Height="200" Width="400" HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="Pink" BorderThickness="3, 2,2.5,1.5" CornerRadius="20,30,20,10" x:Name="teacher_pannel" >
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" >
                <TextBlock Text="ENTER TECHER ID" FontSize="20" Foreground="Red" Height="30" Width="180"/>
                <TextBox Height="30" Width="150"/> 
               </StackPanel>
                <StackPanel>
                    <Button Height="30" Width="80" Margin="0 30" Content="LOG IN" x:Name="login_btn" Click="login_btn_Click_1"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
    </Grid>
</Page>
