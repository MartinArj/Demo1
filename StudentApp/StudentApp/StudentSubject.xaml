<Window x:Class="StudentApp.StudentSubject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StudentSubject" Height="500" Width="600">
    <Grid>
        <Border BorderBrush="#FF3366" BorderThickness="1,2,3,4" HorizontalAlignment="Center" VerticalAlignment="Center" Width="450" Height="350" CornerRadius="20">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Subject Details" FontFamily="Algerian" FontSize="18" HorizontalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="Class" Width="100" FontSize="14" Margin="0,0,10,0"/>
                    <ComboBox x:Name="clas" Width="200" Height="30"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="Subject Code" Width="100" FontSize="14" Margin="0,0,10,0"/>
                    <TextBox Width="200" Height="30"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="Subject Name" Width="100" FontSize="14" Margin="0,0,10,0"/>
                    <TextBox Width="200" Height="30"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                <Button Content="Remove" Width="70" Height="30" FontSize="12" Background="LightBlue"  Margin="40,20,0,0"/>
                <Button Content="Update" Width="70" Height="30" FontSize="12" Background="LightBlue"  Margin="15,20,0,0"/>
                <Button Content="Add" Width="70" Height="30" FontSize="12" Background="LightBlue"  Margin="15,20,0,0"/>
                </StackPanel>
            </StackPanel>
            
        </Border>
    </Grid>
</Window>
